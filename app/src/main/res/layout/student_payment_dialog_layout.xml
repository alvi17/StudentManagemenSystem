<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/payment_student_name"
        android:textSize="18dp"
        android:text="Student Name"
        android:gravity="center_horizontal"
        android:padding="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/payment_college_name"
        android:textSize="16dp"
        android:text="College Name"
        android:gravity="center_horizontal"
        android:padding="5dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Payment type"

        android:padding="5dp"
        android:textStyle="bold"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Monthly "
            android:id="@+id/monthly_fee_radio_button"
            />


        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Exam Fee"
            android:id="@+id/exam_fee_radio_button"
            />


        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Admission"
            android:id="@+id/admission_fee_radio_button"
            />
    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/monthly_fee_linearlayout"
        android:orientation="horizontal"
        android:weightSum="10"
        >

      <EditText
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="7"
          android:id="@+id/monthly_fee_monthedittext"
          android:hint="Month"
          android:layout_marginRight="5dp"
          />



        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/monthly_fee_yeardittext"
            android:hint="Year"
            android:layout_marginLeft="5dp"
            />



    </LinearLayout>



    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment amount"
        android:padding="5dp"
        android:textSize="16dp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/payment_amount_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Payment amount in taka"
        android:textSize="16dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Date"
        android:padding="5dp"
        android:textSize="16dp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/payment_date_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Payment Date"
        android:textSize="16dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />

    <Button
        android:id="@+id/save_payment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="20dp"

        />


</LinearLayout>